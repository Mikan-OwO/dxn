{
	"compilerOptions": {
		"strict": true,
		"target": "es2017",
		"module": "esnext",
		"declaration": true,
		"alwaysStrict": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
  },
  "include": ["src/**/*.*", "tests/**/*.*"]
}